
{#
    Skeleton for Jumbotron Display (text left column + large image right column, and adjustment on mobile)

    Blocks : image, text
    
#}

{% block stylesheets %}<link href="/css/jumbotron.css" rel="stylesheet">{% endblock %}


<div class="jumbotron row mx-0 align-items-center">

    <div class="jumbotron-img-ctn col-12 col-md-6">

      {% block image %}{% endblock %}

    </div>

    <div class="jumbotron-text col-md-6">

        {% block text %}{% endblock %}

    </div>

</div>