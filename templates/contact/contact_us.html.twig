{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_5_layout.html.twig' %}

{% block title %}{{'contact.us'| trans }}{% endblock %}

{% block body %}

    <div class="container col-md-8 col-lg-4 px-0">

        <h3 class="text-center fw-bold mb-4">{{ 'contact.us' |trans }}</h3>

        <p class="h5 mb-4">

            {{ 'email.us.suggestion' | trans }}

        </p>

        <div class="h6 text-center fw-bold">
            contact[{{ 'at' | trans }}]projectofprojects[{{ 'dot' | trans }}]com
        </div>

        <br>

        <p class="h5">

            {{ 'contact.form.suggestion' | trans }}

            <br><br>


        </p>

        <div class="contact-form row text-center mb-4 ">

            {{ form_start(form) }}

            <div class="mb-4">

                {{ form_row(form.authorEmail) }}

            </div>

            <div class="">

                {{ form_row(form.content) }}

            </div>

        </div>

        <!-- Actions Buttons -->

        <div class="text-center ">

            <button type="submit" value="" class="btn btn-success fw-bold me-2 mb-2">
                <span class=""> {{ 'send' | trans }} </span> 
            </button>

            <a href="{{path('homepage')}}">
                <button type="button" value="" class="btn btn-info fw-bold mb-2">
                    <span class="">{{ 'cancel' | trans }}</span> 
                </button>
            </a>
            
        </div>
        
        {{form_end(form)}}

    </div>


    <style>

        .contact-form label{
            font-size: 1.1em;
            color:rgb(26, 26, 56);
        }

    </style>

{% endblock %}
